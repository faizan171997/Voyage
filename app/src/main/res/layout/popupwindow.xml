<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">





    <TextView
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:text="Group Name : "
        android:layout_alignBaseline="@+id/gredit"
        android:layout_alignBottom="@+id/gredit"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/gredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginEnd="14dp"


        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp" />

    <Button
        android:id="@+id/cancelb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/destedit"
        android:textColor="#FFFFFF"
        android:background="#00BCD4"
        android:layout_alignStart="@+id/group" />

    <TextView
        android:id="@+id/dest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination :"
        android:layout_below="@+id/gredit"
        android:layout_alignEnd="@+id/group"
        android:layout_marginTop="37dp" />

    <EditText
        android:id="@+id/destedit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dest"
        android:layout_alignBottom="@+id/dest"
        android:layout_alignStart="@+id/gredit"
        android:ems="10"
        android:inputType="textPersonName"
        android:enabled="false"/>

    <Button
        android:id="@+id/pictureb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show"
        android:layout_alignBaseline="@+id/cancelb"
        android:layout_alignBottom="@+id/cancelb"
        android:layout_alignEnd="@+id/destedit"
        android:textColor="#FFFFFF"
        android:background="#00BCD4"
        android:enabled="false"/>

    <ImageView
        android:id="@+id/imgeview"
        android:layout_width="match_parent"


        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="0dp" />

    <Button
        android:id="@+id/viewMap"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/destedit"
        android:layout_alignEnd="@+id/imgeview"
        android:layout_alignTop="@+id/destedit"
        android:background="@mipmap/location_map"
        android:text=""
        />

    <!--<android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />-->
</RelativeLayout>